<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoffeeExpressAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/your_primary_color</item>
        <item name="colorPrimaryVariant">@color/your_primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/your_secondary_color</item>
        <item name="colorSecondaryVariant">@color/your_secondary_variant_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CoffeeExpressAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CoffeeExpressAndroid.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Theme.CoffeeExpressAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>
